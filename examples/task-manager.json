{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Task management workflow with navigation and admin dashboard",
  "debug": {
    "enabled": true,
    "eval": true
  },
  "graphql": {
    "enabled": true,
    "playground": true
  },
  "places": [
    {"id": "pending", "initial": 1},
    {"id": "in_progress"},
    {"id": "review"},
    {"id": "completed"}
  ],
  "transitions": [
    {"id": "start", "description": "Start working on a task"},
    {"id": "submit", "description": "Submit task for review"},
    {"id": "approve", "description": "Approve completed task"},
    {"id": "reject", "description": "Reject task and send back"}
  ],
  "arcs": [
    {"from": "pending", "to": "start"},
    {"from": "start", "to": "in_progress"},
    {"from": "in_progress", "to": "submit"},
    {"from": "submit", "to": "review"},
    {"from": "review", "to": "approve"},
    {"from": "approve", "to": "completed"},
    {"from": "review", "to": "reject"},
    {"from": "reject", "to": "pending"}
  ],
  "roles": [
    {"id": "user", "name": "Regular User"},
    {"id": "reviewer", "name": "Task Reviewer"},
    {"id": "admin", "name": "Administrator", "inherits": ["user", "reviewer"]}
  ],
  "access": [
    {"transition": "start", "roles": ["user"]},
    {"transition": "submit", "roles": ["user"]},
    {"transition": "approve", "roles": ["reviewer"]},
    {"transition": "reject", "roles": ["reviewer"]}
  ],
  "navigation": {
    "brand": "Task Manager",
    "items": [
      {"label": "Dashboard", "path": "/", "icon": "home"},
      {"label": "My Tasks", "path": "/tasks", "icon": "list"},
      {"label": "Reviews", "path": "/reviews", "icon": "check", "roles": ["reviewer", "admin"]},
      {"label": "Admin", "path": "/admin", "icon": "settings", "roles": ["admin"]}
    ]
  },
  "admin": {
    "enabled": true,
    "path": "/admin",
    "roles": ["admin"],
    "features": ["list", "detail", "history", "transitions"]
  },
  "eventSourcing": {
    "snapshots": {
      "enabled": true,
      "frequency": 10
    },
    "retention": {
      "events": "90d",
      "snapshots": "1y"
    }
  }
}
