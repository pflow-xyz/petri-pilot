{
  "name": "access-test",
  "version": "1.0.0",
  "description": "Test model for access control code generation",
  "places": [
    {
      "id": "draft",
      "description": "Initial state",
      "initial": 1
    },
    {
      "id": "submitted",
      "description": "Submitted for review"
    },
    {
      "id": "approved",
      "description": "Approved by admin"
    },
    {
      "id": "rejected",
      "description": "Rejected"
    }
  ],
  "transitions": [
    {
      "id": "submit",
      "description": "Submit for review",
      "event_type": "Submitted",
      "http_method": "POST",
      "http_path": "/items/{id}/submit"
    },
    {
      "id": "approve",
      "description": "Approve the submission",
      "event_type": "Approved",
      "http_method": "POST",
      "http_path": "/items/{id}/approve"
    },
    {
      "id": "reject",
      "description": "Reject the submission",
      "event_type": "Rejected",
      "http_method": "POST",
      "http_path": "/items/{id}/reject"
    }
  ],
  "arcs": [
    {"from": "draft", "to": "submit"},
    {"from": "submit", "to": "submitted"},
    {"from": "submitted", "to": "approve"},
    {"from": "approve", "to": "approved"},
    {"from": "submitted", "to": "reject"},
    {"from": "reject", "to": "rejected"}
  ],
  "roles": [
    {
      "id": "customer",
      "name": "Customer",
      "description": "Regular customer who can submit items"
    },
    {
      "id": "reviewer",
      "name": "Reviewer",
      "description": "Can review and approve/reject submissions"
    },
    {
      "id": "admin",
      "name": "Administrator",
      "description": "Full access to all operations",
      "inherits": ["customer", "reviewer"]
    }
  ],
  "access": [
    {
      "transition": "submit",
      "roles": ["customer"]
    },
    {
      "transition": "approve",
      "roles": ["reviewer"]
    },
    {
      "transition": "reject",
      "roles": ["reviewer"]
    }
  ],
  "views": [
    {
      "id": "item-table",
      "name": "Items List",
      "kind": "table",
      "description": "List view of all items",
      "groups": [
        {
          "id": "columns",
          "fields": [
            {"binding": "id", "label": "ID", "type": "text", "readonly": true},
            {"binding": "name", "label": "Name", "type": "text"},
            {"binding": "status", "label": "Status", "type": "text", "readonly": true}
          ]
        }
      ],
      "actions": ["submit", "approve", "reject"]
    },
    {
      "id": "item-detail",
      "name": "Item Detail",
      "kind": "detail",
      "description": "Full item details",
      "groups": [
        {
          "id": "info",
          "name": "Item Information",
          "fields": [
            {"binding": "id", "label": "ID", "type": "text", "readonly": true},
            {"binding": "name", "label": "Name", "type": "text"},
            {"binding": "description", "label": "Description", "type": "textarea"},
            {"binding": "status", "label": "Status", "type": "text", "readonly": true}
          ]
        }
      ],
      "actions": ["submit", "approve", "reject"]
    }
  ]
}
